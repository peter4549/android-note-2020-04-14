<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="note"
            type="com.elliot.kim.java.room.Note" />
    </data>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorLime50"
        tools:context="com.elliot.kim.java.room.MainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            card_view:cardCornerRadius="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorLime50">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:background="@color/colorCeruleanAlpha10">

                    <ImageView
                        android:id="@+id/image_view_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/cat_footprint240" />

                    <TextView
                        android:id="@+id/text_view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/image_view_logo"
                        android:textColor="@color/colorDeepPurple651fff"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/image_view_done"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/check_mark_green_240"
                        android:layout_toStartOf="@id/image_view_alarm"
                        android:layout_margin="8dp"
                        android:visibility="invisible"/>

                    <ImageView
                        android:id="@+id/image_view_alarm"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="8dp"
                        android:src="@drawable/time_8c9eff_240"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorDeepPurple651fff" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</layout>